<div class="row">
    <div class="col-sm-3">
        <button type="button" data-ctr-action="-" data-teamid="<%= teamid %>" data-ctr-id="<%= id %>" class="btn btn-block btn-secondary">-</button>
        <button type="button" data-ctr-action="-" data-teamid="<%= teamid %>" data-ctr-id="<%= id2 %>" class="btn btn-block btn-secondary">-</button>
    </div>
    <div class="col-sm-6">
        <div class="row">
            <div class="col-sm-12">
                <center><%= label %></center> 
                <center><span data-ctr-id="<%= id %>" data-teamid="<%= teamid %>" data-ctr-value="<%= id %>">0</span></center>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <center><%= label2 %></center> 
                <center><span data-ctr-id="<%= id2 %>" data-teamid="<%= teamid %>" data-ctr-value="<%= id2 %>">0</span></center>
            </div>
        </div>
    </div>
    <div class="col-sm-3">
        <button type="button" data-ctr-action="+" data-teamid="<%= teamid %>" data-ctr-id="<%= id %>" class="btn btn-block btn-secondary">+</button>
        <button type="button" data-ctr-action="+" data-teamid="<%= teamid %>" data-ctr-id="<%= id2 %>" class="btn btn-block btn-secondary">+</button>
    </div>
</div>
