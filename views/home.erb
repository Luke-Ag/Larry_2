                <p>If you would like to navigate to the actual software please click here.</p>
                <a href="home" class="btn btn-warning" role="button">Click</a>
                <input v-model="user">
            </div>
        </div>
        <script>
var app = new Vue({
    el: '#hello',
    data: {
        user: 'Admin'
    }
})
        </script>
    </body>
</html>
